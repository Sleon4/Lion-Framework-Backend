{
    "name": "lion/bundle",
    "description": "lion-framework configuration and initialization package",
    "type": "library",
    "homepage": "https://lion-client.vercel.app/",
    "keywords": ["lion", "bundle", "lion-bundle"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/lion-packages/framework/issues",
        "source": "https://github.com/lion-packages/framework"
    },
    "autoload": {
        "files": [
            "src/LionBundle/Helpers/Bundle/constans.php",
            "src/LionBundle/Helpers/Bundle/helpers.php"
        ],
        "psr-4": {
            "Lion\\Bundle\\": "src/LionBundle/",
            "Database\\Class\\": "database/Factory/",
            "Database\\Factory\\": "database/Factory/",
            "Database\\Seed\\": "database/Seed/"
        }
    },
    "autoload-dev": {
        "files": [
            "src/LionBundle/Helpers/Bundle/constans.php",
            "src/LionBundle/Helpers/Bundle/helpers.php"
        ],
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-filter": "*",
        "ext-hash": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-session": "*",
        "ext-tokenizer": "*",
        "cboden/ratchet": "^0.4.4",
        "fakerphp/faker": "^1.23",
        "guzzlehttp/guzzle": "^7.8",
        "lion/command": "^3.1",
        "lion/database": "^9.0",
        "lion/files": "^6.0",
        "lion/helpers": "^3.0",
        "lion/mailer": "^6.0",
        "lion/request": "^6.0",
        "lion/route": "^10.0",
        "lion/security": "^9.0",
        "monolog/monolog": "^3.3",
        "nesbot/carbon": "^2.66",
        "predis/predis": "^2.2",
        "symfony/console": "^6.3"
    },
    "require-dev": {
        "lion/test": "^1.1",
        "phpunit/phpunit": "^10.1"
    },
    "suggest": {
        "ext-gd": "Required to use LionSpreadsheet.",
        "ext-pdo": "Required to use all database features.",
        "ext-redis": "Required to use the Redis cache.",
        "fakerphp/faker": "Required to use the factory builder.",
        "guzzlehttp/guzzle": "Requerido para usar el cliente HTTP.",
        "phpunit/phpunit": "Required to use assertions and run tests.",
        "predis/predis": "Required to use the predis connector."
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
